<Window x:Class="WPF_4.MyDocumentViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:WPF_4"
        mc:Ignorable="d"
        Title="MyDocumentViewer" Height="450" Width="800">
    <DockPanel>
        <ToolBarTray Height="40" VerticalAlignment="Top" HorizontalAlignment="Left" DockPanel.Dock="Top" Background="Bisque">
            <ToolBar x:Name="applicationToolBar" Height="40" Width="175" Background="Ivory">
                <Button x:Name="newButton" Height="38" Width="38">
                    <Image Width="30" Height="30" Source="/new.png"/>
                </Button>
                <Button>
                    <Image Width="30" Height="30" Source="/open.png" />
                </Button>
                <Button>
                    <Image Width="30" Height="30" Source="/save.png" />
                </Button>
                <Button>
                    <Image Width="30" Height="30" Source="/trash.png"/>
                </Button>
            </ToolBar>
            <ToolBar x:Name="editingToolBar" Width="410" Margin="1,0,0,0">
                <ToggleButton x:Name="boldButton" Height="38" Width="38">
                    <Image Width="30" Height="30" Source="/bold.png"/>
                </ToggleButton>
                <ToggleButton x:Name="italicButton" Height="38" Width="38">
                    <Image Width="30" Height="30" Source="/italic.png"/>
                </ToggleButton>
                <ToggleButton x:Name="underlineButton" Height="38" Width="38">
                    <Image Width="30" Height="30" Source="/underline.png"/>
                </ToggleButton>
                <xctk:ColorPicker x:Name="fontColorPicker" Width="100" Height="30" VerticalAlignment="Center" DisplayColorAndName="True"/>
                <ComboBox x:Name="fontFamilyComboBox" HorizontalAlignment="Left" VerticalAlignment="Center" Height="30" Width="100" Margin="10,0,1,0"/>
                <ComboBox x:Name="fontSizeComboBox" HorizontalAlignment="Left" VerticalAlignment="Center" Height="30" Width="50" Margin="10,0,1,0"/>
            </ToolBar>
        </ToolBarTray>
        <RichTextBox x:Name="rtbEditor" Background="#FFF7F7D4">
            <FlowDocument/>
        </RichTextBox>
    </DockPanel>
</Window>
